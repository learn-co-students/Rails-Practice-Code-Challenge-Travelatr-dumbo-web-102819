<h1>Post Form</h1>

<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error|%>
        <li><%= error %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br>

    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name, {prompt: true} %><br>

    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name, {prompt: true} %><br>

    <%= f.submit %>

<% end %>