<h1> Blogger Form </h1>

<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
        <li> <%= error %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :bio %>
    <%= f.text_area :bio %><br>
    
    <%= f.label :age%>
    <%= f.number_field :age%><br>
    
    <%= f.submit %>
<% end %>